<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        xmlns:y="clr-namespace:Calculadora.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" MinHeight="450" MinWidth="370">
    <Grid Margin="0,0,-10.4,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <y:ucLogin x:Name="ucLoginForm" correctLogin="UcLoginForm_correctLogin" Background="#004f45" Grid.Column="0" MouseLeftButtonDown="UcLoginForm_MouseLeftButtonDown" Margin="0,0,10,0"/>
        <y:ucCalculadora x:Name="ucCalculadoraForm" Visibility="Hidden" Background="#004f45" Grid.Column="0" Width="Auto" Margin="0,0,10,0"/>
    </Grid>
</Window>
