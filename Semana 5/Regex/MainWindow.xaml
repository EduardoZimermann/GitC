<Window x:Class="Regex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Regex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>
        <Label Content="Telefone:" Margin="200,25,400,90" Grid.Row="0"></Label>
        <TextBox Name="txtTelefone" Text="" Margin="200,50,200,60" Grid.Row="0"></TextBox>

        <Label Content="E-mail:" Margin="200,25,400,90" Grid.Row="1"></Label>
        <TextBox Name="txtEmail" Text="" Margin="200,50,200,60" Grid.Row="1"></TextBox>
        
        <Button Name="btnSalvar" Content="Salvar" Margin="200,30,200,30" Grid.Row="2"></Button>
    </Grid>
</Window>
